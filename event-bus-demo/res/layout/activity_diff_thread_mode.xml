<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/event_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_content_simplest_hint" />

    <Button
        android:id="@+id/send_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_content"
        android:text="@string/send_event" />

    <TextView
        android:id="@+id/receive_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_event"
        android:hint="@string/send_event"
        android:singleLine="false" />

</RelativeLayout>